{% extends 'base.html.twig' %}

{% block body %}
<div class="container-md col-md-8">
{# {% if book != null %} #}
    <table class="table table-striped|sm|bordered|hover|inverse table-inverse table-responsive">
        <thead class="thead-inverse|thead-default">
            <tr>
                <th>Book Title</th>
                <th>Book Cover</th>
                <th>Book Price</th>
                <th>Book Year</th>
                <th>Book Genre</th>
                <th>Book Author</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ book.title }}</td>
                    <td>
                        <img src="{{ asset('covers/'~book.cover) }}" width="100" height="120">
                    </td>
                    <td>{{ book.price }} $ </td>
                    <td>{{ book.year }}</td>
                    <td></td>
                    <td> </td>
                    <td>
                        <a class="btn btn-outline-primary" href="{{ path('book_edit', {'id': book.id})}}">
                            Edit book
                        </a>
                        <a class="btn btn-outline-danger" href="{{ path('book_delete', {'id': book.id})}}">
                            Delete book
                        </a>
                    </td>
                </tr>
            </tbody>
    </table>   
    {# {% else %}
    <h4>Book not found</h4>
    <h4>
        <a href="{{ path('book_index')}}">
            Redirect to book list    
        </a>
    </h4>
{% endif %} #}
    </div>
{% endblock %}
